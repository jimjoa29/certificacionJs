//-API CON ALPINES JS
<section class="slide fade-1 kenBurns animate active selected" data-title="Slide #74 (74)" data-name="slide-74-44761e8b">
    <div class="content">
        <div class="container">
            <div class="wrap">

                <div class="fix-6-12">
                    <h1 class="smaller margin-bottom-2  done">Las Peliculas más Populares del Momento</h1>
                    <h6 class="large done"><span class="opacity-8 "></span>Alpines Js</h6>
                </div>

                <div class="fix-12-12 margin-top-4 center">
                    //-Consumo de Api
                    <div x-data="main()" x-init="fetch(url).then(response => response.json()).then( json => { peliculas = json.results; numPages = json.info.pagina; })">


                        <div class="personajes-list flex flex-center gap-15">

                            <template x-for ="pelicula in peliculas">

                                <div class="personaje ">
                                    <img x-bind:src=`https://image.tmdb.org/t/p/w500/${pelicula.poster_path}` width="225">
                                    <div class="padding-top-2 ">
                                        <p class="small" x-text="pelicula.original_title"></p>
                                        <p class="" x-text="pelicula.release_date"></p>
                                    </div>
                                </div>
                            </template>

                        </div>


                        <div class="fix-12-12 black padding-bottom-3 padding-top-3">
                            <p>Numero de Páginas: <span x-text="numPages"></span></p>
                            <p>Pagina Actual: <span x-text="pagina"></span></p>


                                <button @click="changePage('prev')">Anterior</button>
                                <button @click="changePage('next')">Siguiente</button>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="background" style="background-image:url(#{base}../../../../assets/img/home/backgrounds/)"></div>


</section>

//-FORMULARIO
